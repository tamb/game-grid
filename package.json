  "main": "index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "npm run dev",
    "library:dev": "webpack --mode=development --watch --config ./webpack.config.prod.js",
    "demo:dev": "webpack --watch --mode=development --config ./webpack.config.demo.js",
    "dev": "concurrently \"npm run library:dev\" \"npm run demo:dev\" \"node openDemo.js\"",
    "build": "webpack --mode=production --config ./webpack.config.prod.js",
    "docs": "jsdoc src/docs.js",
    "safe:publish": "npm run test && npm run build && npm publish"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.13.10",
    "@types/jest": "^26.0.22",
    "babel-jest": "^26.6.3",
    "concurrently": "^6.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.1.2",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "node-sass": "^5.0.0",
    "open": "^8.0.8",
    "postcss": "^8.2.15",
    "postcss-loader": "^5.2.0",
    "postcss-preset-env": "^6.7.0",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.5",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.4",
    "webpack": "^5.25.0",
    "webpack-cli": "^4.5.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "dependencies": {
    "typescript-declaration-webpack-plugin": "^0.2.2",
    "webpack-dev-server": "^4.3.1"
  }
}
